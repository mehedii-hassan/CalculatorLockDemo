<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CalculatorFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCConverter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:contentDescription="rootx"
        android:src="@drawable/currency_converter"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/glTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="22dp"
        app:tint="#FF9800" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRootX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:contentDescription="rootx"
        android:src="@drawable/root_x"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/glTop"
        app:layout_constraintEnd_toStartOf="@+id/fabCConverter"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="22dp"
        app:tint="#FF9800" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#DCFBFAFA"
        app:layout_constraintBottom_toTopOf="@id/glMiddle"
        app:layout_constraintTop_toBottomOf="@+id/fabCConverter">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".6" />

        <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:padding="10dp"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/glInput" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:hint="output"
            android:padding="10dp"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/tvInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="50dp"
        android:layout_height="3dp"
        app:dividerColor="#A39A8D"
        app:layout_constraintBottom_toTopOf="@+id/glMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glMiddle">

        <!--normal calculator include-->
        <include
            android:id="@+id/normalCalculator"
            layout="@layout/normal_cal_design" />

        <!--scientific calculator include-->
        <include
            android:id="@+id/scientificCalculator"
            layout="@layout/scientific_cal_design" />

    </androidx.constraintlayout.widget.ConstraintLayout>

