<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_3dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_4dp"
        app:cardElevation="@dimen/_5dp"
        app:contentPadding="@dimen/_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <ImageView
                android:id="@+id/ivFilesRowDesign"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:src="@drawable/plus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFolderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30dp"
                android:padding="@dimen/_2dp"
                android:text="Files Name"
                android:textColor="#808080"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivFilesRowDesign"
                app:layout_constraintStart_toEndOf="@+id/ivFilesRowDesign"
                app:layout_constraintTop_toTopOf="@+id/ivFilesRowDesign" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>